{% extends '::base.html.twig' %}

{% block body %}
    <ul class="list-group">
        {% for user in users %}
            {% if user.id != app.user.id %}
                <li class="list-group-item">
                    <a href="{{ path('user_view', {'user': user.id }) }}">
                        {{ user.username }}
                    </a>
                    <form class="form-inline" method="post" action="{{ path('friend_add') }}">
                        <input type="hidden" name="friend_id" value="{{ user.id }}">
                        <button type="submit" class="btn btn-default">Add friend</button>
                    </form>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endblock %}