{% extends "profile/profile_layout.html.twig" %}
{% trans_default_domain "polish" %}

{% block title %}
    {{ app.user.username }} {{"profile" | trans }}
{% endblock %}

{% block profile_page_content %}
        
        <h1>{{'Your profile page' | trans }}</h1>
        
        <form novalidate action="" method="post" {{ form_enctype(editForm) }}> 
            {{ form_widget(editForm) }}

            <div class="btn-submit">
                <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-save"></span>{{'Update' | trans }}</button>
            </div>
        </form>
{% endblock %}
