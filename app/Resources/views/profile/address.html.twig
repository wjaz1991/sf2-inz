{% extends "profile/profile_layout.html.twig" %}

{% block title %}
    {{ app.user.username }}'s profile
{% endblock %}

{% block profile_page_content %}
    <h3>Update your address info</h3>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'} }) }}
    {{ form_widget(form) }}
    {{ form_rest(form) }}
    <button type="submit" class="btn btn-default button-green">Update</button>
    {{ form_end(form) }}
{% endblock %}
