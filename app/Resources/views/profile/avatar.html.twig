{% extends "profile/profile_layout.html.twig" %}
{% trans_default_domain "polish" %}

{% block title %}
    {{ app.user.username }} {{'profile' | trans }}
{% endblock %}

{% block profile_page_content %}
    <h3>{{'Update your avatar' | trans }}</h3>
    {% if app.user.avatar %}
        <div class="profile-avatar text-left">
            <img src="{{ asset(app.user.avatar.getWebPath) }}" alt="Avatar image">
        </div>
    {% endif %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'} }) }}
    {{ form_widget(form) }}
    {{ form_rest(form) }}
    <button type="submit" class="btn btn-default button-green">{{'Update' | trans }}</button>
    {{ form_end(form) }}
{% endblock %}
