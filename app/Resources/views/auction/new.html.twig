{% extends "::base.html.twig" %}

{% form_theme form 'form/auction/new.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/tinymce/js/tinymce/tinymce.min.js') }}"></script>
    <script src="{{ asset('js/utilities/datepicker/bootstrap-datepicker.js') }}"></script>
    {% javascripts 'js/auctions/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datepicker/datepicker.css') }}">
    {% stylesheets 'sass/auction/edit.scss' filter="compass"%}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="col-md-10 col-md-offset-1 auction-form-wrap">
        <h1 class="text-center">Add new auction</h1>
        {{ form(form) }}
    </div>
        
        
{% endblock %}